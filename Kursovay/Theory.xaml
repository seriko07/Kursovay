<Window x:Class="Kursovay.Theory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kursovay"
        mc:Ignorable="d"
        Title="Theory" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="photo_2021-11-25_23-20-50.jpg"/>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock x:Name="Name_Theory"  Text="{Binding Test_theory.Title}" HorizontalAlignment="Left" TextWrapping="Wrap"  VerticalAlignment="Top" Height="84" Width="209" FontSize="20" FontFamily="/Kursovay;component/#Cocomat Pro"/>
        <TextBlock x:Name="Theory_text" Text="{Binding Test_theory.Theory}" HorizontalAlignment="Left"  Grid.Row="1" TextWrapping="Wrap"  VerticalAlignment="Top" Height="336" Width="794" FontSize="20" FontFamily="/Kursovay;component/#Cocomat Pro" Background="White" Opacity="0.9" />
        <Button Content="Перейти к тесту" Background="#FFFEF20A" HorizontalAlignment="Right"  VerticalAlignment="Center" Height="80" Width="150" Click="Test_click" FontFamily="/Kursovay;component/#Cocomat Pro" FontSize="15" />







    </Grid>
</Window>
