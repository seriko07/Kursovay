<Window x:Class="Kursovay.Lesson"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kursovay"
        mc:Ignorable="d"
        Title="Редактор урока" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <!--<RowDefinition Height="0.5 *" />-->

        </Grid.RowDefinitions>

        <Grid.Background>
            <LinearGradientBrush EndPoint="0.4,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF8D6363" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button Content="Сохранить" Grid.Column="2"  Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Center" Width="127" Height="45" RenderTransformOrigin="0.173,0.644" Click="Button_Click"/>
        <TextBox HorizontalAlignment="Left" Height="316" Grid.Row="1"  TextWrapping="Wrap" Name="Theory"  VerticalAlignment="Top" Width="528" Grid.ColumnSpan="3" Grid.RowSpan="4" Margin="10,0,0,0"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="10,51,0,0" TextWrapping="Wrap" Text="Введите теорию урока" VerticalAlignment="Top" Width="184" Name="Title"/>





